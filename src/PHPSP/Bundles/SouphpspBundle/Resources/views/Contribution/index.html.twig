<h1>Contribution list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Userid</th>
            <th>Project</th>
            <th>Type</th>
            <th>Description</th>
            <th>Reference</th>
            <th>Notes</th>
            <th>Status</th>
            <th>Mentorid</th>
            <th>Dateadded</th>
            <th>Dateapproved</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('contribution_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.userId }}</td>
            <td>{{ entity.project }}</td>
            <td>{{ entity.type }}</td>
            <td>{{ entity.description }}</td>
            <td>{{ entity.reference }}</td>
            <td>{{ entity.notes }}</td>
            <td>{{ entity.status }}</td>
            <td>{{ entity.mentorId }}</td>
            <td>{{ entity.dateAdded|date('Y-m-d H:i:s') }}</td>
            <td>{{ entity.dateApproved|date('Y-m-d H:i:s') }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('contribution_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('contribution_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('contribution_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
